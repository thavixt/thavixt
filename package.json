{
  "name": "uikit",
  "description": "React UI component library",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/uikit",
    "packages/uikit-website"
  ],
  "scripts": {
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=chpt_ba8799fb0cdc96d --auto-accept-changes --ci",
    "coverage": "npx vitest run --coverage ./packages/uikit/src",
    "cyct:open": "npx cypress open --component --config-file cypress.config.js",
    "cyct:run": "npx cypress run --browser chrome --component --config-file cypress.config.js",
    "cyct:run-headed": "npx cypress run --headed --browser chrome --component --config-file cypress.config.js",
    "cyct:spec": "npx cypress run --browser chrome --component --config-file cypress.config.js --spec=**/%npm_config_spec%.cy.tsx",
    "lerna:build": "npx lerna run build",
    "lerna:check": "npx lerna run check",
    "lerna:test": "npm run lerna:check && npm run test",
    "lerna:version": "npx lerna publish --no-private --force-publish",
    "storybook:clear": "rm -rf node_modules/.cache/storybook",
    "storybook:deploy": "npm run storybook:clear && storybook build && cp -r .vercel storybook-static/.vercel && vercel --prod storybook-static",
    "storybook:dev": "npm run storybook:clear && storybook dev -p 6066",
    "tdd": "npx vitest",
    "test": "npx vitest run"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "thavixt-scrollbar-react": "1.6.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@cypress/react": "^9.0.0",
    "@eslint/js": "^9.19.0",
    "@storybook/addon-docs": "^8.6.0",
    "@storybook/addon-essentials": "^8.6.0",
    "@storybook/addon-interactions": "^8.6.0",
    "@storybook/addon-themes": "^8.6.0",
    "@storybook/blocks": "^8.6.0",
    "@storybook/react": "^8.6.0",
    "@storybook/react-vite": "^8.6.0",
    "@storybook/test": "^8.6.0",
    "@tailwindcss/cli": "^4.0.9",
    "@tailwindcss/vite": "4.0.7",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.8",
    "chromatic": "^11.27.0",
    "classnames": "^2.5.1",
    "cypress": "^14.1.0",
    "cypress-real-events": "^1.14.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-storybook": "^0.11.3",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "lerna": "^8.2.0",
    "storybook": "^8.6.0",
    "tailwindcss": "^4.0.8",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vercel": "^41.2.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.8"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
