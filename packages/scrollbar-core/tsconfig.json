{
	"compilerOptions": {
		"target": "es6",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"outDir": "./dist/",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		
		"declarationMap": true,
	},
	"include": ["src/**/*.ts", "test/**/*.ts"]
}
